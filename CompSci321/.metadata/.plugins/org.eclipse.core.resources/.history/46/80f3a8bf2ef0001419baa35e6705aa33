import java.io.File;


public class GeneBankCreateBTree {
	
	static int debug;
	static int degree;
	static int sequenceLength;
	static String fileName;
	static String error = "Usage: java GeneBankCreateBTree <degree> <gbk file> <sequence length> [<debug level>]";

	//java GeneBankCreateBTree <degree> <gbk file> <sequence length> [<debug level>]
	public static void main(String[] args) {
		
		if(args.length != 2 && args.length != 3){
			System.out.println("Incorrect # of arguments.\n\t" + error);
			System.exit(0);
		}
	
		degree = Integer.parseInt(args[0]);
		
		if(degree == 0){
			degree = 4096;
		}
		
		fileName = args[1];
		int sequenceLength = Integer.parseInt(args[2]);
		if(sequenceLength < 1 && sequenceLength > 32){
			System.out.println("sequence length needs to be between 1 and 31 (inclusive).\n\t" + error);
			System.exit(0);
		}
		
		if(args.length == 3){
			 debug = Integer.parseInt(args[3]);
			 if(debug != 1 && debug != 0){
				 System.out.println("debug level needs to be 1 or 0. \n\t" + error);
				 System.exit(0);
			 }
		}
		
	}

}
