import java.util.Scanner;


public class ConvertToSeconds {

	
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter hours: ");
		System.out.println("Enter minutes: ");
		System.out.println("Enter seconds: ");
		
		int hours = scan.nextInt();
		System.out.println("scanned: " + hours);
		int minutes = scan.nextInt();
		int seconds = scan.nextInt();
		
		double secondsOfHours = hours * 60;
		System.out.println("converted " + secondsOfHours);
		int secondsOfMinutes = minutes / 60;
	
		
		System.out.println("Total Number of Seconds: ");
		
		

	}

}
